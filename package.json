{
  "name": "react-fullstack-portfolio",
  "version": "1.0.0",
  "description": "A MERN app that works both as a portfolio and a blog",
  "main": "index.js",
  "repository": "https://github.com/TheOmegaBlack/react-fullstack-portfolio",
  "author": "Sacha Morgese",
  "license": "MIT",
  "dependencies": {
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.3",
    "lodash": "^4.17.11",
    "mongoose": "^5.2.17",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.3",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0"
  },
  "engines": {
    "node": "^12.0.0",
    "npm": "^6.4.1",
    "yarn": "^1.9.4"
  },
  "scripts": {
    "start": "yarn build",
    "build": "run-s client:build server:prod",
    "dev": "run-p client:dev server:dev",
    "server:dev": "nodemon index.js",
    "server:prod": "node index.js",
    "client:dev": "cd client && yarn dev",
    "client:build": "cd client && yarn build",
    "lint": "eslint ./*.js src/**/*.js client/src/**/*.js",
    "fix": "eslint ./*.js src/**/*.js client/src/**/*.js --fix",
    "postinstall": "cd client && yarn",
    "flow": "flow status",
    "test": "jest"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.9.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.81.0",
    "jest": "^24.9.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "regenerator-runtime": "^0.12.1"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ],
    "delay": 2000
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "semi": true,
    "arrowParens": "always"
  },
  "resolutions": {
    "**/fsevents": "^1.2.9"
  }
}
