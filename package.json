{
  "name": "react-fullstack-portfolio",
  "version": "1.0.0",
  "description": "A MERN app that works both as a portfolio and a blog",
  "main": "index.js",
  "repository": "https://github.com/TheOmegaBlack/react-fullstack-portfolio",
  "author": "Sacha Morgese",
  "license": "MIT",
  "dependencies": {
    "express": "^4.16.3"
  },
  "engines": {
    "node": "10.10.0",
    "npm": "6.4.1"
  },
  "scripts": {
    "start": "node index.js",
    "build": "run-s client:build server:prod",
    "dev": "run-p client:dev server:dev",
    "server:dev": "nodemon index.js",
    "server:prod": "node index.js",
    "client:dev": "cd client && yarn start:dev",
    "client:build": "cd client && yarn start:build",
    "lint": "eslint **/*.js",
    "fix": "eslint **/*.js --fix"
  },
  "devDependencies": {
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3"
  },
  "nodemonConfig": {
    "ignore": ["client/*"],
    "delay": "30000"
  }
}
