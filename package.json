{
  "name": "react-fullstack-portfolio",
  "version": "1.0.0",
  "description": "A MERN app that works both as a portfolio and a blog",
  "main": "index.js",
  "repository": "https://github.com/TheOmegaBlack/react-fullstack-portfolio",
  "author": "Sacha Morgese",
  "license": "MIT",
  "dependencies": {
    "express": "^4.16.3"
  },
  "engines": {
    "node": "10.10.0",
    "npm": "6.4.1"
  },
  "scripts": {
    "start": "node index.js",
    "build": "run-s client:build server:prod",
    "dev": "run-p client:dev server:dev",
    "server:dev": "nodemon index.js",
    "server:prod": "node index.js",
    "client:dev": "cd client && yarn start:dev",
    "client:build": "cd client && yarn start:build",
    "lint": "eslint ./*.js src/**/*.js client/**/*.js",
    "fix": "eslint ./*.js src/**/*.js client/src/**/*.js --fix",
    "postinstall": "cd client && yarn",
    "flow": "flow"
  },
  "devDependencies": {
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.81.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ],
    "delay": "2000"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "semi": true,
    "arrowParens": "always"
  }
}
